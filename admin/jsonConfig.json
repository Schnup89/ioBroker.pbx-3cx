{
    "i18n": true,
    "type": "panel",
    "items": {
        "_header-settings": {
            "type": "header",
            "text": "Connection Settings",
            "size": 2
        },
        "sHost": {
            "type": "text",
            "label": "3CX IP/DNS",
            "newLine": true
        },
        "sUser": {
            "type": "text",
            "label": "Username",
            "newLine": true
        },
        "sPass": {
            "type": "password",
            "label": "Password",
            "newLine": false
        },
        "sRefresh": {
            "type": "number",
            "label": "Aktualisierungsinterval (sec)",
            "newLine": true
        },
        "_header-endpoints": {
            "type": "header",
            "text": "API Endpoints",
            "size": 2
        },

        "aAPIEndpoints": {
            "type": "table",
            "noDelete": true,
            "items": [
                { "type": "text", "width": "100%", "title": "Endpoint", "attr": "sEP", "filter": false, "sort": false },
                {
                    "type": "checkbox",
                    "title": "Enable",
                    "attr": "bEnable",
                    "width": 200,
                    "filter": false,
                    "sort": false
                },
                {
                    "type": "checkbox",
                    "title": "Livedata",
                    "width": 200,
                    "attr": "bLive",
                    "filter": false,
                    "sort": false
                }
            ]
        }
    }
}
